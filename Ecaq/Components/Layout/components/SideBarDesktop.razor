@implements IDisposable
@rendermode InteractiveServer
@inject NavigationManager NavigationManager


<div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
    <!-- Sidebar component, swap this element with another sidebar if you like -->
    <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-gray-900 px-6 pb-4">
        <div class="flex h-16 shrink-0 items-center">
            <a href="/">
                <img class="h-12 w-auto" src="favicon.png" alt="Your Company">
            </a>
        </div>
        <nav class="flex flex-1 flex-col">
            <ul role="list" class="flex flex-1 flex-col gap-y-7">
                <AuthorizeView>
                    <Authorized>
                        <li>
                            <ul role="list" class="-mx-2 space-y-1">
                                <li>
                                    <!-- Current: "bg-gray-800 text-white", Default: "text-gray-400 hover:text-white hover:bg-gray-800" -->
                                    <NavLink Match="NavLinkMatch.All" href="/" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                                        </svg>
                                        Dashboard
                                    </NavLink>
                                </li>
                                <li>
                                    <NavLink Match="NavLinkMatch.All" href="/fileman" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                                        </svg>
                                        File Manager
                                    </NavLink>
                                </li>
                                <li>
                                    <div>
                                        <button type="button" @onclick="(() => collapseChildMenu = !collapseChildMenu)" class="@(collapseChildMenu ? "text-gray-400":"text-white") hover:text-white hover:bg-gray-800 group flex items-center w-full text-left rounded-md p-2 gap-x-3 text-sm leading-6 font-semibold" aria-controls="sub-menu-1" aria-expanded="false">
                                            <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
                                            </svg>
                                            Teams
                                            <!-- Expanded: "rotate-90 text-gray-500", Collapsed: "text-gray-400" -->
                                            <svg class="ml-auto h-5 w-5 shrink-0 @(collapseChildMenu ? "":"rotate-90")" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                                <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                                            </svg>
                                        </button>
                                        <!-- Expandable link section, show/hide based on state. -->
                                        <ul class="@(collapseChildMenu ? "hidden":"") mt-1 px-2" id="sub-menu-1">
                                            <li>
                                                <!-- 44px -->
                                                <NavLink Match="NavLinkMatch.All" href="/home-banner" class="hover:bg-gray-800 block rounded-md py-2 pr-2 pl-9 text-sm leading-6 text-gray-400 hover:text-gray-100">
                                                    Home Banner
                                                </NavLink>
                                            </li>
                                            <li>
                                                <!-- 44px -->
                                                <NavLink Match="NavLinkMatch.All" href="/about" class="hover:bg-gray-800 block rounded-md py-2 pr-2 pl-9 text-sm leading-6 text-gray-400 hover:text-gray-100">
                                                    About
                                                </NavLink>
                                            </li>
                                            <li>
                                                <!-- 44px -->
                                                <NavLink Match="NavLinkMatch.All" href="/alliance" class="hover:bg-gray-800 block rounded-md py-2 pr-2 pl-9 text-sm leading-6 text-gray-400 hover:text-gray-100">
                                                    Alliance
                                                </NavLink>
                                            </li>
                                            <li>
                                                <!-- 44px -->
                                                <NavLink Match="NavLinkMatch.All" href="/ecaq-core" class="hover:bg-gray-800 block rounded-md py-2 pr-2 pl-9 text-sm leading-6 text-gray-400 hover:text-gray-100">
                                                    Ecaq Core
                                                </NavLink>
                                            </li>
                                            <li>
                                                <!-- 44px -->
                                                <NavLink Match="NavLinkMatch.All" href="/gallery" class="hover:bg-gray-800 block rounded-md py-2 pr-2 pl-9 text-sm leading-6 text-gray-400 hover:text-gray-100">
                                                    Gallery
                                                </NavLink>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </Authorized>
                </AuthorizeView>
                <li>
                    <div class="text-xs font-semibold leading-6 text-gray-400">Authentication</div>
                    <ul role="list" class="-mx-2 mt-2 space-y-1">


                        <AuthorizeView Roles="Manager, Admin">
                            <Authorized>

                                <li>
                                    <NavLink Match="NavLinkMatch.All" href="/manage-users" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6a7.5 7.5 0 107.5 7.5h-7.5V6z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5H21A7.5 7.5 0 0013.5 3v7.5z" />
                                        </svg>
                                        Manage Users
                                    </NavLink>
                                </li>

                                <li>
                                    <NavLink Match="NavLinkMatch.All" href="/profile" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6a7.5 7.5 0 107.5 7.5h-7.5V6z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 10.5H21A7.5 7.5 0 0013.5 3v7.5z" />
                                        </svg>
                                        Profile
                                    </NavLink>
                                </li>

                                <li>
                                    <NavLink Match="NavLinkMatch.All" href="auth" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <span class="bi bi-lock-nav-menu" aria-hidden="true"></span> Auth Required
                                    </NavLink>
                                </li>

                                <li>
                                    <NavLink href="Account/Manage" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                                    </NavLink>
                                </li>

                                <li>
                                    <NavLink href="Account/Register" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                                    </NavLink>
                                </li>

                            </Authorized>
                        </AuthorizeView>
                        <AuthorizeView>
                            <Authorized>
                                <li>
                                    <form action="Account/Logout" method="post">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                        <button type="submit" class="w-full text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold">
                                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                                        </button>
                                    </form>
                                </li>
                            </Authorized>
                            <NotAuthorized>
                                <li>
                                    <NavLink href="Account/Login" class="text-gray-400 hover:text-white hover:bg-gray-800 group flex gap-x-1 rounded-md p-2 text-sm leading-6 font-semibold">
                                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                                    </NavLink>
                                </li>
                            </NotAuthorized>
                        </AuthorizeView>
                    </ul>
                </li>
                <li class="mt-auto hidden">
                    <NavLink Match="NavLinkMatch.All" href="/fluent-test" class="group -mx-2 flex gap-x-3 rounded-md p-2 text-sm font-semibold leading-6 text-gray-400 hover:bg-gray-800 hover:text-white">
                        <svg class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        Settings
                    </NavLink>
                </li>
            </ul>
        </nav>
    </div>
</div>




@code {
    private string? currentUrl;
    bool collapseChildMenu = true;

    protected override void OnInitialized()
    {

        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void CollapseToggle()
    {
        collapseChildMenu = !collapseChildMenu;
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

