<div class="">
    <div class="relative border border-gray-300 rounded-md px-3 shadow-sm">
        <label for="name" class="absolute @BgColor -top-2 left-2 -mt-px inline-block px-1 bg-beeBackground text-xs font-medium text-appBlack">@Label</label>
        
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            @IconLeft                        
        </div>

        @ModelFragment

    </div>
    @ErrorValidationRF
</div>






@code {
    [Parameter]
    public string? BgColor { get; set; }
    [Parameter]
    public string? Label { get; set; }
    [Parameter]
    public RenderFragment? IconLeft { get; set; }
    [Parameter]
    public RenderFragment? ModelFragment { get; set; }
    [Parameter]
    public RenderFragment? ErrorValidationRF { get; set; }

}
